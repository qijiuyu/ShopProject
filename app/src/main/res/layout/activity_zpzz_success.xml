<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/back_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交成功"
            android:textColor="@color/color_33333"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F9F9F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:background="@drawable/white_share"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/success_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="您的发票信息已经提交成功，我们会快速审核！"
                android:textColor="@color/color_33333"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4.5dp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3秒后返回到首页"
                android:textSize="14sp"
                android:textColor="@color/color_CE5798"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="68.5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="142dp"
            android:layout_height="39dp"
            android:background="@drawable/bg_zpzz_success"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:text="返回个人中心"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>

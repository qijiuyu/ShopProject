<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/back_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认支付"
            android:textColor="@color/color_33333"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@color/color_F9F9F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/white_share">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付金额"
                android:textSize="13sp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24000"
                android:textColor="@color/color_37C7B5"
                android:textSize="24sp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E7E7E7"
                android:layout_marginTop="19dp"/>

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号：1258444555"
                android:textSize="14sp"
                android:textColor="@color/color_999999"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/white_share">
        
        <LinearLayout
            android:id="@+id/lin_wx"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_wx"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/pay_select"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wx_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="13sp"
                android:textColor="@color/color_33333"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E7E7E7"/>

        <LinearLayout
            android:id="@+id/lin_zfb"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_zfb"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/select_btn"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zfb_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="13sp"
                android:textColor="@color/color_33333"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E7E7E7"/>

        <LinearLayout
            android:id="@+id/lin_dg"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dg"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/select_btn"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dui_gong"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对公支付"
                android:textSize="13sp"
                android:textColor="@color/color_33333"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>



    <com.zxdc.utils.library.view.ClickTextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_37C7B5"
        android:text="确认支付"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"/>

</RelativeLayout>

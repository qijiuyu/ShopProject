<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:background="@drawable/white_share">

       <ImageView
           android:id="@+id/img_select"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@mipmap/jx_no_select"
           android:layout_centerVertical="true"
           android:layout_marginLeft="11.5dp"/>
       
       <com.zxdc.utils.library.view.OvalImage2Views
           android:id="@+id/img_icon"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:src="@mipmap/aa"
           android:layout_toRightOf="@id/img_select"
           android:layout_centerVertical="true"
           android:layout_marginLeft="13dp"/>

       <TextView
           android:id="@+id/tv_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="@color/color_33333"
           android:layout_toRightOf="@id/img_icon"
           android:layout_marginTop="14dp"
           android:lines="2"
           android:ellipsize="end"
           android:layout_marginLeft="19dp"
           android:layout_marginRight="11dp"/>

       <TextView
           android:id="@+id/tv_color"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="红色"
           android:textColor="@color/color_999999"
           android:textSize="12sp"
           android:layout_toRightOf="@id/img_icon"
           android:layout_marginLeft="19dp"
           android:layout_below="@id/tv_content"
           android:layout_marginTop="5dp"/>

       <TextView
           android:id="@+id/tv_money"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="1600"
           android:textSize="17sp"
           android:textColor="@color/color_37C7B5"
           android:layout_toRightOf="@id/img_icon"
           android:layout_marginLeft="19dp"
           android:layout_marginTop="80dp"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_alignParentRight="true"
           android:layout_alignBottom="@id/tv_money"
           android:layout_marginRight="15dp">

           <ImageView
               android:id="@+id/img_remove"
               android:layout_width="21.5dp"
               android:layout_height="21.5dp"
               android:src="@mipmap/remove_num"
               android:layout_gravity="center_vertical"/>

           <TextView
               android:id="@+id/tv_num"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1"
               android:textSize="14sp"
               android:textColor="@color/color_33333"
               android:layout_marginRight="11dp"
               android:layout_marginLeft="11dp"/>

           <ImageView
               android:id="@+id/img_add"
               android:layout_width="21.5dp"
               android:layout_height="21.5dp"
               android:src="@mipmap/add_num"
               android:layout_gravity="center_vertical"/>

       </LinearLayout>

   </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_share"
        android:layout_marginTop="13.5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型描述"
            android:textSize="17sp"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/tv_type_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1000"
            android:textColor="@color/color_37C7B5"
            android:textSize="17sp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"/>

        <com.zxdc.utils.library.view.MyGridView
            android:id="@+id/gv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type_money"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:numColumns="2"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

</LinearLayout>

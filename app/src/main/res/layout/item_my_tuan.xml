<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="155dp"
        android:background="@drawable/white_share"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp">

            <com.zxdc.utils.library.view.OvalImage2Views
                android:id="@+id/img_shopping"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pt_bg"
                android:layout_alignParentRight="true"/>

            <com.ylkj.shopproject.view.TileView
                android:id="@+id/tv_pt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12.5dp"
            android:lines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余23:12:15"
            android:textColor="@color/color_999999"
            android:textSize="11sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="48.5dp"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/color_37C7B5"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="64.5dp"/>

        <TextView
            android:id="@+id/tv_dm_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单买价：6500"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="88.5dp"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="@color/color_33333"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="69dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tv_yf_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/color_999999"
            android:layout_alignParentRight="true"
            android:layout_marginTop="88.5dp"
            android:layout_marginRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E7E7E7"
            android:layout_marginTop="115dp"/>

        <TextView
            android:id="@+id/tv_statu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:textSize="13sp"
            android:textColor="@color/color_CE5798"
            android:layout_marginTop="126dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</LinearLayout>

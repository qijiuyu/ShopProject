<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@drawable/white_share"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘德华"
            android:textSize="17sp"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:text="15011225569"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_marginTop="15.5dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="36dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@id/tv_mobile"
            android:background="@drawable/bg_address"
            android:text="默认"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:gravity="center"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:text="北京市天通苑北二区十号楼"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_999999"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="12dp"/>
        
        <ImageView
            android:id="@+id/img_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="24.5dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/select_all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/update_address"
            android:drawablePadding="7dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="26.5dp"
            android:layout_marginRight="79dp"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/del_address"
            android:drawablePadding="7dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="26.5dp"
            android:layout_marginRight="22dp"/>

    </RelativeLayout>

</RelativeLayout>

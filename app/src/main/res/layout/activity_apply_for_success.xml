<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/back_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="售后"
            android:textColor="@color/color_33333"
            android:textSize="18sp"/>

    </RelativeLayout>

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/success_icon"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="75dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非常感谢您的评价"
        android:textColor="@color/color_33333"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3秒后返回到首页"
        android:textSize="14sp"
        android:textColor="@color/color_CE5798"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"/>

    <com.zxdc.utils.library.view.ClickTextView
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_register"
        android:text="返回首页"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="130dp"/>

    <com.zxdc.utils.library.view.ClickTextView
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_after"
        android:text="查看申请记录"
        android:textColor="@color/color_37C7B5"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>

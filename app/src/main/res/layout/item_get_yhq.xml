<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_F9F9F9">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="95dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_share">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/yhq_bg"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="¥"
            android:textColor="@color/color_37C7B5"
            android:textSize="14sp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="30.5dp"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="5"
            android:textSize="30sp"
            android:textColor="@color/color_37C7B5"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="47.5dp"/>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满50元可用"
            android:textColor="@color/color_37C7B5"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55.5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="100.5dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复合磨削类优惠券"
            android:textSize="14sp"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="23.5dp"
            android:layout_marginRight="80dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019.04.05～2019.05.13"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="55.5dp"
            android:layout_marginRight="80dp"/>

        <TextView
            android:id="@+id/tv_get"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="立即领取"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"/>

    </RelativeLayout>

</LinearLayout>

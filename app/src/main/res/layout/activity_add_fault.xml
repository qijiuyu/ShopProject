<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F9F9F9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/write_back"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="在线报修"
            android:textColor="@color/color_33333"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rel_select_addr"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/white_share"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击去添加地址"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27.5dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100.5dp"
                android:background="@drawable/white_share"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘德华"
                    android:textSize="18sp"
                    android:textColor="@color/color_33333"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_userName"
                    android:text="152558896"
                    android:textSize="16sp"
                    android:textColor="@color/color_33333"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="24dp"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mobile"
                    android:text="北京市昌平区天通苑北二区十号楼"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:lines="2"
                    android:ellipsize="end"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next"
                    android:layout_marginRight="14dp"/>
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/line_cs"/>

            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100.5dp"
                android:background="@drawable/white_share"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="机型名称"
                        android:textSize="14sp"
                        android:textColor="@color/color_666666"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"/>

                    <com.zxdc.utils.library.view.ClickTextView
                        android:id="@+id/tv_add_jx"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/color_37C7B5"
                        android:text="+"
                        android:textSize="30dp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/tv_jx_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="70dp"
                        android:textSize="14sp"
                        android:hint="请选择机型名称"
                        android:textColor="@color/color_666666"
                        android:drawableRight="@mipmap/next"
                        android:drawablePadding="10dp"
                        android:gravity="right"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_EBEBEB"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出厂日期"
                        android:textSize="14sp"
                        android:textColor="@color/color_666666"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="70dp"
                        android:textSize="14sp"
                        android:hint="请选择出厂日期"
                        android:textColor="@color/color_666666"
                        android:drawableRight="@mipmap/next"
                        android:drawablePadding="10dp"
                        android:gravity="right"/>

                </RelativeLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_share"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="请输入故障信息"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"
                    android:gravity="top"/>

            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/white_share"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机床信息照片"
                android:textColor="@color/color_33333"
                android:textSize="14sp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="14dp"/>

            <com.zxdc.utils.library.view.OvalImage2Views
                android:id="@+id/img_fault"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="22dp"
                android:src="@mipmap/add_fault_img"/>

            <com.zxdc.utils.library.view.OvalImage2Views
                android:id="@+id/img_fault2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="132dp"
                android:src="@mipmap/add_fault_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名牌"
                android:textSize="14sp"
                android:textColor="@color/color_33333"
                android:layout_below="@id/img_fault2"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="9dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机床照片"
                android:textSize="14sp"
                android:textColor="@color/color_33333"
                android:layout_below="@id/img_fault2"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="9dp"/>

        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/white_share">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他信息"
                    android:textColor="@color/color_33333"
                    android:textSize="14sp"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="14dp"/>

                <com.zxdc.utils.library.view.MyGridView
                    android:id="@+id/gv_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="11dp"
                    android:numColumns="3"/>

            </LinearLayout>

            <com.zxdc.utils.library.view.ClickTextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_37C7B5"
                android:layout_marginTop="24dp"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
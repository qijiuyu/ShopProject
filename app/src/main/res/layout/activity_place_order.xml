<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/back_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="@color/color_33333"
            android:textSize="18sp"/>

    </RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/rel"
       android:background="@color/color_F9F9F9"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="50dp"
       android:scrollbars="none">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp">

               <RelativeLayout
                   android:id="@+id/rel_select_addr"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:background="@drawable/white_share">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/location"
                       android:layout_marginLeft="10dp"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="点击去添加地址"
                       android:textColor="@color/color_999999"
                       android:textSize="14sp"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="27.5dp"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/next"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="10dp"/>

               </RelativeLayout>

               <RelativeLayout
                   android:id="@+id/rel_addr"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:background="@drawable/white_share">

                   <TextView
                       android:id="@+id/tv_userName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="刘德华"
                       android:textSize="18sp"
                       android:textColor="@color/color_33333"
                       android:layout_marginLeft="14dp"
                       android:layout_marginTop="16dp"/>

                   <TextView
                       android:id="@+id/tv_mobile"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@id/tv_userName"
                       android:text="152558896"
                       android:textSize="16sp"
                       android:textColor="@color/color_33333"
                       android:layout_marginTop="17dp"
                       android:layout_marginLeft="24dp"/>

                   <TextView
                       android:id="@+id/tv_address"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/tv_mobile"
                       android:text="北京市昌平区天通苑北二区十号楼"
                       android:textColor="@color/color_666666"
                       android:textSize="12sp"
                       android:layout_marginTop="7.5dp"
                       android:layout_marginLeft="14dp"
                       android:layout_marginRight="14dp"
                       android:lines="2"
                       android:ellipsize="end"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:src="@mipmap/next"
                       android:layout_marginRight="14dp"/>

               </RelativeLayout>

           </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp">

             <RelativeLayout
                 android:id="@+id/rel_good"
                 android:layout_width="match_parent"
                 android:layout_height="115dp"
                 android:background="@drawable/white_share">

                 <com.zxdc.utils.library.view.OvalImage2Views
                     android:id="@+id/img_shopping"
                     android:layout_width="90dp"
                     android:layout_height="90dp"
                     android:src="@mipmap/aa"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="10dp"/>

                 <TextView
                     android:id="@+id/tv_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="我的商品的标题"
                     android:textSize="14sp"
                     android:textColor="@color/color_33333"
                     android:layout_toRightOf="@id/img_shopping"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="15dp"
                     android:layout_marginTop="12.5dp"
                     android:lines="2"
                     android:ellipsize="end"/>

                 <TextView
                     android:id="@+id/tv_time"
                     android:visibility="gone"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="剩余23:12:15"
                     android:textColor="@color/color_999999"
                     android:textSize="11sp"
                     android:layout_marginLeft="110dp"
                     android:layout_marginTop="48.5dp"/>

                 <TextView
                     android:id="@+id/tv_money"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="6000"
                     android:textSize="17sp"
                     android:textColor="@color/color_37C7B5"
                     android:layout_marginLeft="110dp"
                     android:layout_marginTop="64.5dp"/>

                 <TextView
                     android:id="@+id/tv_old_money"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="单买价：6500"
                     android:textSize="11sp"
                     android:textColor="@color/color_999999"
                     android:layout_marginLeft="110dp"
                     android:layout_marginTop="88.5dp"/>

                 <TextView
                     android:id="@+id/tv_num"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="x1"
                     android:textColor="@color/color_33333"
                     android:textSize="14sp"
                     android:layout_alignParentRight="true"
                     android:layout_marginTop="69dp"
                     android:layout_marginRight="10dp"/>

                 <TextView
                     android:id="@+id/tv_yf_money"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="运费：15"
                     android:textSize="11sp"
                     android:textColor="@color/color_999999"
                     android:layout_alignParentRight="true"
                     android:layout_marginTop="88.5dp"
                     android:layout_marginRight="10dp"/>

             </RelativeLayout>

             <com.zxdc.utils.library.view.MeasureListView
                 android:id="@+id/good_list"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
             </com.zxdc.utils.library.view.MeasureListView>

         </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:orientation="vertical"
               android:background="@drawable/white_share">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="买家留言"
                   android:textColor="@color/color_33333"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"/>

               <EditText
                   android:id="@+id/et_des"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:textColor="@color/color_33333"
                   android:minLines="5"
                   android:hint="可留言给卖家"
                   android:gravity="top"
                   android:background="@null"
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginBottom="10dp"/>

           </LinearLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="234.5dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/white_share">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="发票信息"
                   android:textColor="@color/color_33333"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="13dp"/>

               <LinearLayout
                   android:id="@+id/lin_fp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="13dp">

                   <TextView
                       android:id="@+id/tv_fp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="不开发票"
                       android:textSize="14sp"
                       android:textColor="@color/color_999999"
                       android:layout_gravity="center_vertical"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/next"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="7dp"/>

               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="优惠券"
                   android:textColor="@color/color_33333"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="58dp"/>

               <TextView
                   android:id="@+id/tv_yhq"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="请选择"
                   android:textSize="14sp"
                   android:textColor="@color/color_999999"
                   android:layout_gravity="center_vertical"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="58dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商品金额"
                   android:textColor="@color/color_33333"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="103dp"/>

               <TextView
                   android:id="@+id/tv_money2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1000"
                   android:textSize="14sp"
                   android:textColor="@color/color_33333"
                   android:layout_gravity="center_vertical"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="103dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="运费"
                   android:textColor="@color/color_33333"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="148dp"/>

               <TextView
                   android:id="@+id/tv_yf_money2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="15"
                   android:textSize="14sp"
                   android:textColor="@color/color_33333"
                   android:layout_gravity="center_vertical"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="148dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="优惠金额"
                   android:textColor="@color/color_33333"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="193dp"/>

               <TextView
                   android:id="@+id/tv_yh_money"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="10"
                   android:textSize="14sp"
                   android:textColor="@color/color_33333"
                   android:layout_gravity="center_vertical"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="193dp"/>

           </RelativeLayout>

       </LinearLayout>

   </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共一件   总金额：5000"
            android:textSize="14sp"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <com.zxdc.utils.library.view.ClickTextView
            android:id="@+id/tv_submit"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_37C7B5"
            android:text="下单"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </RelativeLayout>

</RelativeLayout>

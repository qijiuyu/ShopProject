<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_F9F9F9">


    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="162.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/white_share">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间：2019.04.05"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款"
            android:textSize="13sp"
            android:textColor="@color/color_CE5798"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12.5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E1E1E1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="42dp"/>


     <com.zxdc.utils.library.view.OvalImage2Views
         android:id="@+id/img_icon"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:src="@mipmap/aa"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="57.5dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斜进式高精数控外圆磨床P90高度数控外圆磨床数控集成"
            android:textSize="14sp"
            android:textColor="@color/color_33333"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="57.5dp"
            android:layout_marginRight="13dp"
            android:lines="2"
            android:ellipsize="end"/>

        <com.zxdc.utils.library.view.ClickTextView
            android:id="@+id/tv_audit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_after"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="122.5dp"
            android:text="待审核"
            android:textColor="@color/color_37C7B5"
            android:textSize="12sp"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_main"
                    android:layout_width="17.95dp"
                    android:layout_height="20.3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/main_yes"/>

                <TextView
                    android:id="@+id/tv_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="首页"
                    android:textSize="11sp"
                    android:textColor="@color/color_36C7B5"
                    android:gravity="center_horizontal"/>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="17.95dp"
                    android:layout_height="20.3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/type_no"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="分类"
                    android:textSize="11sp"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"/>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_business"
                    android:layout_width="17.95dp"
                    android:layout_height="20.3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/business_no"/>

                <TextView
                    android:id="@+id/tv_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="生意圈"
                    android:textSize="11sp"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"/>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shopping"
                    android:layout_width="17.95dp"
                    android:layout_height="20.3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/shopping_no"/>

                <TextView
                    android:id="@+id/tv_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="购物车"
                    android:textSize="11sp"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"/>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="17.95dp"
                    android:layout_height="20.3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/user_no"/>

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="我的"
                    android:textSize="11sp"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"/>

            </com.zxdc.utils.library.view.ClickLinearLayout>

        </LinearLayout>

    </LinearLayout>

</TabHost>
